<section class="container">
    <form class="form edit-form font">
        <div class="form-group">
          <input class="form-input" type="text" id="edit-title" value="{{post.name}}" required/>
        </div>
      <div class="form-group">
        <textarea class="form-input" type="text" id="edit-description" required>{{post.description}}</textarea>
      </div>
      <div class="form-group">
        <button class="btn btn-primary log" type="submit" id="updateButton" data-id="{{id}}">Update</button>
      </div>
      <div class="form-group">
        <button class="btn btn-primary log deleteBtn" type="submit" data-id="{{id}}">Delete</button>
      </div>
    </form>
</section>

<script src="/js/editPost.js"></script>