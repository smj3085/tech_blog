<section class="container">
    <form class="form edit-post-form">
        <div class="form-group">
            <h2>Edit post</h2>
            <label for="post-name" class="sr-only">Post name</label>
            <input class="form-control" type="text" id="edit-name" value="{{post.name}}" required/>
            <label for="post-desc" class="sr-only">Description</label>
            <textarea name="desc" type="text" value="{{post.description}}" id="edit-desc"
            class="form-control mb-3">{{post.description}}</textarea>
      </div>
      <div class="form-group">
        <button class="btn btn-primary updateBtn" type="submit">Update</button>
      </div>
      <div class="form-group">
        <button class="btn btn-primary deleteBtn" type="submit">Delete</button>
      </div>
    </form>
</section>

<script src="/js/editPost.js"></script>