<div class="mb-5 pt-3">
    <form class="form new-post-form">
      <h1 class="h3 mb-3 font-weight-normal">Create a post:</h1>
      <label for="post-name" class="sr-only">Post title</label>
      <input type="text" id="post-name" class="form-control mb-3" placeholder="Title" required>
      <label for="post-desc" class="sr-only">Description</label>
      <textarea type="textarea" id="post-desc" class="form-control mb-3" placeholder="Description" required></textarea>
      <button class="btn btn-lg btn-primary btn-block" type="submit">Create</button>
    </form>
  </div>
  
  <div class="row">
    <h2 class="title pb-4">Your posts</h2><hr>
    {{#if posts.length}}
  </div>

    {{#each posts as |post|}}
    <div class="row">
      <h4><a href="/post/{{post.id}}">{{post.name}}</a></h4>
        <p>{{post.description}}</p>
    </div>
    <div class="row">
      <a class="btn btn-lg btn-warning" href="/edit/{{post.id}}">Edit</a>
      <button class="btn btn-lg btn-danger deleteBtn" data-id="{{post.id}}">Delete</button>
    </div>
    {{/each}}
    
  
  {{else}}
  <h6 class="pb-4 has-text-centered is-italic">You do not currently have any posts</h6>

  {{/if}}


<script src="/js/dashboard.js"></script>
